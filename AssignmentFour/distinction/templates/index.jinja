<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Distinction Chat App</title>
    <script defer src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script>
        const getJinjaConfig = () =>({
            client_id: {{client_id}}
        });
    </script>
    <script src="{{url_for('assets', path='/script.js')}}"></script>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto max-w-4xl h-screen flex flex-col p-4">
        <!-- Header -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-4">
            <h1 class="text-3xl font-bold text-gray-800 text-center">Distinction Chat App</h1>
            <div class="flex justify-between items-center mt-4">
                <div class="text-lg">
                    <span class="text-gray-600">Client ID:</span>
                    <span id="client-id" class="font-mono bg-gray-100 px-2 py-1 rounded">{{client_id}}</span>
                </div>
                <div class="text-sm">
                    <span class="text-gray-600">Status:</span>
                    <span id="connection-status" class="text-yellow-600 font-semibold">Connecting...</span>
                </div>
            </div>
        </div>

        <!-- Messages Container -->
        <div class="flex-1 bg-white rounded-lg shadow-md p-4 mb-4 overflow-hidden flex flex-col">
            <h3 class="text-lg font-semibold text-gray-700 mb-3 border-b pb-2">Messages</h3>
            <div id="messages" class="flex-1 overflow-y-auto space-y-2 pr-2">
                <!-- Messages will appear here -->
            </div>
        </div>

        <!-- Message Input -->
        <div class="bg-white rounded-lg shadow-md p-4">
            <form onsubmit="sendMessage(event)" class="flex gap-3">
                <input
                    type="text"
                    id="message"
                    placeholder="Type your message here..."
                    class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    maxlength="500"
                >
                <button
                    type="submit"
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200 font-semibold"
                >
                    Send
                </button>
            </form>
        </div>
    </div>
</body>
</html>
